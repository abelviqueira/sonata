{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>

        {% for rol in app.user.roles %}
            {% if rol == 'ROLE_ADMIN' %}
                <div class="mb-3">
                    Acceder al panel de administrador <a href="{{ path('sonata_admin_dashboard') }}">Sonata</a>
                </div>
            {% endif %}
        {% endfor %}
    {% else %}
        <div class="mb-3">
            Bienvenido a SEAT, puedes <a href="{{ path('app_login') }}">iniciar sesi√≥n</a> o <a href="{{ path('app_register') }}">registrarte</a>
        </div>
    {% endif %}





</div>
{% endblock %}
